#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	cargo build --release

override_dh_auto_install:
	install -D -m755 target/release/clipsnap debian/clipsnap/usr/bin/clipsnap
	install -D -m644 resources/clipsnap.desktop debian/clipsnap/usr/share/applications/clipsnap.desktop
	install -D -m644 resources/default_config.toml debian/clipsnap/etc/clipsnap/config.toml

override_dh_auto_clean:
	cargo clean || true