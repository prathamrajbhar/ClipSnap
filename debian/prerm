#!/bin/bash
# ClipSnap pre-removal script

set -e

case "$1" in
    remove|upgrade|deconfigure)
        echo "Stopping ClipSnap processes..."
        # Gracefully stop any running instances
        pkill -f "clipsnap" || true
        sleep 1
        # Force kill if still running
        pkill -9 -f "clipsnap" || true
        ;;

    failed-upgrade)
        ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0